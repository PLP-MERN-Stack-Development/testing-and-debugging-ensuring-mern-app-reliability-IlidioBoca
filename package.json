{
  "name": "mern-testing-project",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:server": "jest --selectProjects server",
    "test:client": "jest --selectProjects client",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --runInBand --selectProjects server client --testPathPattern=unit",
    "test:integration": "jest --runInBand --selectProjects server client --testPathPattern=integration",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run",
    "dev:server": "node server/src/server.js",
    "dev:client": "cd client && npm run dev"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "babel-jest": "^29.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0",
    "supertest": "^6.3.0",
    "mongodb-memory-server": "^9.0.0",
    "identity-obj-proxy": "^3.0.0",
    "cypress": "^13.0.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "mongoose": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}